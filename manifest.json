  {
    "name": "Stay on task (extension)",
    "version": "1.0",
    "description": "An extension that blocks certain websites you choose so you can stay on task",
    "browser_action": {
      "default_icon": "logo.png",
      "default_popup": "popup.html",
      "default_title": "On task"
    },    
    "permissions": [
        "http://*/*",
        "https://*/*",
        "activeTab"
    ],
    "manifest_version": 2
  }
